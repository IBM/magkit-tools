<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
    <name>magnolia-editor-tools</name>
    <displayName>${project.name}</displayName>
    <description>${project.description}</description>
    <class>com.aperto.magnolia.edittools.setup.EditToolsModule</class>
    <versionHandler>com.aperto.magnolia.edittools.setup.EditToolsVersionHandler</versionHandler>
    <version>${project.version}</version>

    <components>
        <id>magnolia-editor-tools</id>
        <component>
            <type>com.aperto.magnolia.edittools.util.LinkService</type>
            <implementation>com.aperto.magnolia.edittools.util.LinkService</implementation>
            <scope>singleton</scope>
        </component>
    </components>

    <components>
        <!-- set custom view impl for the pages app -->
        <id>app-pages-detail</id>
        <component>
            <type>info.magnolia.pages.app.editor.statusbar.activationstatus.ActivationStatusView</type>
            <implementation>com.aperto.magnolia.edittools.views.EditorToolsActivationStatusViewImpl</implementation>
        </component>
    </components>

    <components>
        <id>subapp</id>
        <component>
            <type>info.magnolia.ui.workbench.WorkbenchStatusBarPresenter</type>
            <implementation>com.aperto.magnolia.edittools.ui.workbench.ToolsWorkbenchStatusBarPresenter</implementation>
        </component>
    </components>

    <components>
        <id>admincentral</id>
        <type-mapping>
            <type>info.magnolia.ui.workbench.tree.MoveHandler</type>
            <implementation>com.aperto.magnolia.edittools.action.ConfirmTreeViewDropHandler</implementation>
        </type-mapping>
    </components>

    <components>
        <id>admincentral</id>
        <type-mapping>
            <type>info.magnolia.ui.contentapp.browser.drop.RowDragger</type>
            <implementation>com.aperto.magnolia.edittools.m6.ui.ConfirmRowDragger</implementation>
        </type-mapping>
    </components>

    <components>
        <id>app-dam-jcrBrowser</id>
        <component>
            <type>info.magnolia.ui.contentapp.ItemDescriber</type>
            <implementation>com.aperto.magnolia.edittools.m6.ui.AssetUsageItemDescriber</implementation>
        </component>
    </components>

    <dependencies>
        <dependency>
            <name>core</name>
            <version>${magnolia.version}/*</version>
        </dependency>
        <dependency>
            <name>pages</name>
            <version>${magnolia.pages.version}/*</version>
        </dependency>
        <dependency>
            <name>pages-app</name>
            <version>${magnolia.pages.version}/*</version>
        </dependency>
        <dependency>
            <name>dam-app</name>
            <version>${magnolia.dam.jcr.version}/*</version>
        </dependency>
        <dependency>
            <name>dam-app-core</name>
            <version>${magnolia.dam.jcr.version}/*</version>
        </dependency>
        <dependency>
            <name>dam-app-jcr</name>
            <version>${magnolia.dam.jcr.version}/*</version>
        </dependency>
        <dependency>
            <name>multisite</name>
            <version>${magnolia.multisite.version}/*</version>
        </dependency>
        <dependency>
            <name>magkit</name>
            <version>${magkit.version}/*</version>
        </dependency>
    </dependencies>
</module>
