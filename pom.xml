<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.aperto</groupId>
        <artifactId>aperto-pom</artifactId>
        <version>1.7.2</version>
    </parent>
    <groupId>com.aperto.magkit</groupId>
    <version>1.0.3-SNAPSHOT</version>
    <name>Magnolia Translation Module</name>
    <description>App to manage translations for various languages form different properties files.</description>
    <artifactId>magnolia-translation</artifactId>
    <packaging>jar</packaging>

    <properties>
        <magnolia.version>5.4.8</magnolia.version>
        <aperto.magkit.version>3.2.0</aperto.magkit.version>

        <!-- Aperto Super-Pom properties override -->
        <source.javaversion>1.8</source.javaversion>
        <target.javaversion>1.8</target.javaversion>
    </properties>

    <dependencies>
        <dependency>
            <groupId>info.magnolia</groupId>
            <artifactId>magnolia-i18n</artifactId>
            <version>${magnolia.version}</version>
        </dependency>

        <!-- CSV -->
        <dependency>
            <groupId>net.sf.opencsv</groupId>
            <artifactId>opencsv</artifactId>
            <version>2.3</version>
        </dependency>

        <dependency>
            <artifactId>magkit</artifactId>
            <groupId>com.aperto.magkit</groupId>
            <version>${aperto.magkit.version}</version>
            <exclusions>
                <exclusion>
                    <artifactId>magnolia-module-standard-templating-kit</artifactId>
                    <groupId>info.magnolia</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>commons-logging</artifactId>
                    <groupId>commons-logging</groupId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <finalName>magnolia-translation</finalName>
        <resources>
            <!-- Filter all *.properties files within resources directory and keep
                other files as they are. -->
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>**/META-INF/magnolia/*.xml</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/META-INF/magnolia/*.xml</include>
                </includes>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

    <distributionManagement>
        <repository>
            <id>aperto.nexus.releases</id>
            <name>aperto.nexus.releases</name>
            <url>https://maven.aperto.de/nexus/content/repositories/aperto.magkit.releases/</url>
        </repository>
        <snapshotRepository>
            <id>aperto.nexus.snapshots</id>
            <name>aperto.nexus.snapshots</name>
            <url>https://maven.aperto.de/nexus/content/repositories/aperto.magkit.snapshots/</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>aperto.nexus.groups.magnolia</id>
            <url>https://maven.aperto.de/nexus/content/groups/magnolia/</url>
        </repository>
    </repositories>
</project>