<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.aperto</groupId>
        <artifactId>aperto-pom</artifactId>
        <version>1.7.2</version>
    </parent>
    <groupId>com.aperto.magkit</groupId>
    <version>1.0.1-SNAPSHOT</version>
    <name>Magnolia Translation Module</name>
    <description>App to manage translations for various lanugages form different properties files.</description>
    <artifactId>magnolia-translation</artifactId>
    <packaging>jar</packaging>

    <properties>
        <!-- Aperto Super-Pom properties override -->
        <source.javaversion>1.8</source.javaversion>
        <target.javaversion>1.8</target.javaversion>
    </properties>

    <dependencies>
        <!-- CSV -->
        <dependency>
            <groupId>net.sf.opencsv</groupId>
            <artifactId>opencsv</artifactId>
            <version>2.3</version>
        </dependency>

        <dependency>
            <artifactId>magkit</artifactId>
            <groupId>com.aperto.magkit</groupId>
            <version>3.2.0</version>
            <exclusions>
                <exclusion>
                    <artifactId>magnolia-module-standard-templating-kit</artifactId>
                    <groupId>info.magnolia</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>commons-logging</artifactId>
                    <groupId>commons-logging</groupId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <finalName>magnolia-translation</finalName>
        <resources>
            <!-- Filter all *.properties files within resources directory and keep
                other files as they are. -->
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>**/*.properties</exclude>
                    <exclude>**/META-INF/magnolia/*.xml</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*.properties</include>
                    <include>**/META-INF/magnolia/*.xml</include>
                </includes>
                <filtering>true</filtering>
            </resource>
        </resources>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-enforcer-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>enforce-versions</id>
                            <phase>validate</phase>
                            <goals>
                                <goal>enforce</goal>
                            </goals>
                            <configuration>
                                <rules>
                                    <requireJavaVersion>
                                        <version>[1.6,)</version>
                                    </requireJavaVersion>
                                    <bannedDependencies>
                                        <includes>
                                            <!-- Do not even allow scope "test", since it overrides a transitive
                                                "provided". S. http://www.sonatype.com/books/mvnref-book/reference/pom-relationships-sect-project-dependencies.html#pom-relationships-sect-transitive -->
                                            <include>org.mockito:mockito-all</include>
                                            <!--<include>javax.servlet:javax.servlet-api:*:*:provided</include> -->
                                        </includes>
                                    </bannedDependencies>
                                </rules>
                                <fail>true</fail>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>

        </pluginManagement>

        <plugins>
            <!-- The Resources Plugin handles the copying of project resources to
                the output directory. Variables can be included in your resources. These
                variables, denoted by the ${...} delimiters, can come from the System properties,
                your project properties, from your filter resources and from the command
                lines. See http://maven.apache.org/plugins/maven-resources-plugin -->
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <groupId>org.apache.maven.plugins</groupId>
                <configuration>
                    <!-- we only filter *.properties which must use ISO-8859-1 since java
                        reads property bundles with that encoding see http://docs.oracle.com/javase/6/docs/api/java/util/Properties.html -->
                    <encoding>ISO-8859-1</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <distributionManagement>
        <repository>
            <id>aperto.nexus.releases</id>
            <name>aperto.nexus.releases</name>
            <url>https://maven.aperto.de/nexus/content/repositories/aperto.magkit.releases/</url>
        </repository>
        <snapshotRepository>
            <id>aperto.nexus.snapshots</id>
            <name>aperto.nexus.snapshots</name>
            <url>https://maven.aperto.de/nexus/content/repositories/aperto.magkit.snapshots/</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>aperto.nexus.groups.magnolia</id>
            <url>https://maven.aperto.de/nexus/content/groups/magnolia/</url>
        </repository>
    </repositories>
</project>