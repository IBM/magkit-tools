<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.aperto.magkit</groupId>
        <artifactId>mgnl-pom</artifactId>
        <version>1.2.0</version>
    </parent>
    <version>1.5.0-SNAPSHOT</version>
    <name>Magnolia Translation Module</name>
    <description>App to manage translations for various languages from different properties files.</description>
    <artifactId>magnolia-translation</artifactId>
    <packaging>jar</packaging>

    <properties>
        <magnolia.version>6.2.2</magnolia.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>info.magnolia.ui</groupId>
            <artifactId>magnolia-ui-admincentral</artifactId>
            <version>${magnolia.version}</version>
        </dependency>
        <dependency>
            <groupId>info.magnolia</groupId>
            <artifactId>magnolia-i18n</artifactId>
            <version>${magnolia.version}</version>
        </dependency>

        <!-- CSV -->
        <dependency>
            <groupId>net.sf.opencsv</groupId>
            <artifactId>opencsv</artifactId>
            <version>2.3</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.aperto.magkit</groupId>
            <artifactId>magkit-test</artifactId>
            <version>3.5.0</version>
        </dependency>
    </dependencies>

    <build>
        <finalName>magnolia-translation</finalName>
        <resources>
            <!-- Filter all *.properties files within resources directory and keep
                other files as they are. -->
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>**/META-INF/magnolia/*.xml</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/META-INF/magnolia/*.xml</include>
                </includes>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

    <repositories>
        <repository>
            <id>acid.magnolia.group</id>
            <url>https://acid-repo.aperto.de/repository/magnolia/</url>
        </repository>
    </repositories>
</project>