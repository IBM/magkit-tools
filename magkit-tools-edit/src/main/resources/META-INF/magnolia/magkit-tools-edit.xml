<!DOCTYPE module SYSTEM "module.dtd" >
<module>
    <name>${project.artifactId}</name>
    <displayName>${project.name}</displayName>
    <description>${project.description}</description>
    <class>de.ibmix.magkit.tools.edit.setup.EditToolsModule</class>
    <versionHandler>de.ibmix.magkit.tools.edit.setup.EditToolsVersionHandler</versionHandler>
    <version>${project.version}</version>

    <components>
        <id>${project.artifactId}</id>
        <component>
            <type>de.ibmix.magkit.tools.edit.util.LinkService</type>
            <implementation>de.ibmix.magkit.tools.edit.util.LinkService</implementation>
            <scope>singleton</scope>
        </component>
    </components>

    <components>
        <!-- set custom view impl for the pages app -->
        <id>app-pages-detail</id>
        <component>
            <type>info.magnolia.pages.app.editor.statusbar.activationstatus.ActivationStatusView</type>
            <implementation>de.ibmix.magkit.tools.edit.views.EditorToolsActivationStatusViewImpl</implementation>
        </component>
    </components>

    <components>
        <id>subapp</id>
        <component>
            <type>info.magnolia.ui.workbench.WorkbenchStatusBarPresenter</type>
            <implementation>de.ibmix.magkit.tools.edit.ui.workbench.ToolsWorkbenchStatusBarPresenter</implementation>
        </component>
    </components>

    <components>
        <id>admincentral</id>
        <type-mapping>
            <type>info.magnolia.ui.workbench.tree.MoveHandler</type>
            <implementation>de.ibmix.magkit.tools.edit.action.ConfirmTreeViewDropHandler</implementation>
        </type-mapping>
    </components>

    <components>
        <id>admincentral</id>
        <type-mapping>
            <type>info.magnolia.ui.contentapp.browser.drop.RowDragger</type>
            <implementation>de.ibmix.magkit.tools.edit.m6.ui.ConfirmRowDragger</implementation>
        </type-mapping>
    </components>

    <components>
        <id>app-dam-jcrBrowser</id>
        <component>
            <type>info.magnolia.ui.contentapp.ItemDescriber</type>
            <implementation>de.ibmix.magkit.tools.edit.m6.ui.AssetUsageItemDescriber</implementation>
        </component>
    </components>

    <dependencies>
        <dependency>
            <name>pages</name>
        </dependency>
        <dependency>
            <name>pages-app</name>
        </dependency>
        <dependency>
            <name>dam-app</name>
        </dependency>
        <dependency>
            <name>dam-app-core</name>
        </dependency>
        <dependency>
            <name>dam-app-jcr</name>
        </dependency>
    </dependencies>
</module>
